<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="@string/weightKg"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.079" android:id="@+id/weightTextField"
            android:layout_marginBottom="280dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <Button
            android:text="@string/count"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:id="@+id/button" android:layout_marginBottom="32dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.499" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/height_edit_field" app:layout_constraintVertical_bias="1.0"/>
    <TextView
            android:text="@string/heightCm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/heightTextField"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.059" android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/weight_edit_field"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:text=""
            android:ems="10"
            android:id="@+id/weight_edit_field" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/weightTextField" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.109"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:text=""
            android:ems="10"
            android:id="@+id/height_edit_field" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/heightTextField" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/bmiResult" app:layout_constraintHorizontal_bias="0.115"
            app:layout_constraintVertical_bias="0.0"/>
    <TextView
            android:text=""
            android:textSize="26dp"
            android:layout_width="159dp"
            android:layout_height="52dp"
            android:gravity="center"
            android:id="@+id/bmiResult" android:layout_marginBottom="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="143dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/height_edit_field" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.536" app:layout_constraintVertical_bias="0.0"/>
    <TextView
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bmi_status" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/bmiResult" app:layout_constraintEnd_toEndOf="@+id/bmiResult"
            app:layout_constraintStart_toStartOf="@+id/bmiResult" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.128"/>
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@android:drawable/ic_menu_add"
            android:id="@+id/info_button" android:layout_marginTop="140dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toEndOf="@+id/bmiResult"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.45"
            app:layout_constraintVertical_bias="0.021"/>

</androidx.constraintlayout.widget.ConstraintLayout>