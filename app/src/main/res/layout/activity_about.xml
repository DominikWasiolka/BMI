<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AboutActivity" android:orientation="vertical">

    <TextView
            android:text="@string/author"
            android:textSize="30dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/textView4" android:layout_weight="1"/>
    <TextView
            android:text="This circle is pointless"
            android:gravity="center_horizontal"
            android:textSize="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/textView6" android:layout_weight="1"/>
    <ImageView
            android:layout_width="match_parent"
            android:layout_height="462dp" app:srcCompat="@drawable/circle" android:id="@+id/imageView2"
            android:layout_weight="1"/>
    <Button
            android:text="Like"
            android:layout_gravity="center"
            android:layout_width="435dp"
            android:layout_height="21dp" android:id="@+id/like_button" android:layout_weight="1"/>
</LinearLayout>