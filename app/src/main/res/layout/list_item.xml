<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                android:layout_height="wrap_content"    >

    <TextView
            android:layout_width="83dp"
            android:textSize="20dp"
            android:gravity="center"
            android:layout_height="56dp" android:id="@+id/bmi"
            android:layout_alignParentStart="true" android:layout_marginStart="4dp"
            android:layout_marginTop="3dp" android:layout_alignParentTop="true"/>
    <TextView
            android:text="weight:"
            android:layout_width="53dp"
            android:layout_height="wrap_content" android:id="@+id/weight_text"
            android:layout_marginTop="4dp" android:layout_alignParentTop="true" android:layout_toEndOf="@+id/bmi"
            android:layout_marginStart="16dp"/>
    <TextView
            android:text="height:"
            android:layout_width="53dp"
            android:layout_height="wrap_content" android:id="@+id/height_text"
            android:layout_marginTop="3dp" android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/weight_number"
            android:layout_marginStart="4dp"/>
    <TextView
            android:text=""
            android:layout_width="124dp"
            android:layout_height="wrap_content" android:id="@+id/date"
            android:layout_marginTop="11dp" android:layout_below="@+id/weight_text"
            android:layout_toEndOf="@+id/textView2" android:layout_marginStart="18dp"/>
    <TextView
            android:text=""
            android:layout_width="86dp"
            android:layout_height="wrap_content" android:id="@+id/weight_number"
            android:layout_toEndOf="@+id/weight_text"
            android:layout_marginStart="14dp" android:layout_marginTop="4dp" android:layout_alignParentTop="true"/>
    <TextView
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/height_number"
            android:layout_alignParentEnd="true" android:layout_marginEnd="1dp"
            android:layout_toEndOf="@+id/height_text"
            android:layout_marginStart="5dp" android:layout_marginTop="4dp" android:layout_alignParentTop="true"/>
    <TextView
            android:text=""
            android:layout_width="59dp"
            android:layout_height="wrap_content" android:id="@+id/system" android:layout_toEndOf="@+id/date"
            android:layout_marginStart="32dp" android:layout_alignParentEnd="true" android:layout_marginEnd="18dp"
            android:layout_marginTop="13dp" android:layout_below="@+id/weight_number"/>
    <TextView
            android:text="Date:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView2" android:layout_toEndOf="@+id/bmi"
            android:layout_marginStart="13dp" android:layout_marginTop="11dp"
            android:layout_below="@+id/weight_number"/>
</RelativeLayout>